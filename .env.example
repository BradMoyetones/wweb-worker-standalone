# ============================================
# CONFIGURACIÓN DEL BOT DE WHATSAPP
# ============================================

# Nombre del grupo de WhatsApp (debe coincidir exactamente)
GROUP_NAME='Nombre de tu grupo'

# URL de la API para obtener datos de visitantes
API_URL='https://example.com/api/endpoint'

# URL de la API para iniciar sesión
API_LOGIN_URL='https://example.com/api/login'

# Zona horaria (opcional)
TZ='America/Bogota'

# ============================================
# CREDENCIALES DE ACCESO A LA API
# ============================================

# Usuario de acceso
PJD_USER='tu_usuario'

# Contraseña de acceso
PJD_PASS='tu_contraseña'

# Valor del campo oculto del formulario -> actualmente 'S'
HDN='S'

# ============================================
# CONFIGURACIÓN DE ENVÍO AUTOMÁTICO
# ============================================

# Hora de inicio de envío automático (formato 24h: HH:MM)
# Ejemplos: '09:00' para 9 AM, '14:30' para 2:30 PM
# Dejar vacío para iniciar inmediatamente
START_AT='09:00'

# Intervalo de minutos en que se enviará el mensaje
INTERVAL_MINUTES='30'